{
  "schemaVersion": 1,
  "id": "charm",
  "version": "${mod_version}",
  "name": "Charm Forked",
  "description": "An UNOFFICIAL, likely temporary fork of Charm. Do not report issues to the original dev.",
  "authors": [
    "svenhjol",
    "Coranthes",
    "WarlordWossman",
    "F43nd1r",
    "MuonR"
  ],
  "icon": "icon.png",
  "license": "MIT",
  "environment": "*",
  "mixins": [
    "charm.mixins.json"
  ],
  "entrypoints": {
    "main": [
      "svenhjol.charm.fabric.Initializer"
    ],
    "client": [
      "svenhjol.charm.fabric.ClientInitializer"
    ],
    "rei_common": [
      "svenhjol.charm.integration.rei.CharmReiPlugin"
    ],
    "rei_client": [
      "svenhjol.charm.integration.rei.CharmReiClientPlugin"
    ],
    "modmenu": [
      "svenhjol.charm.integration.modmenu.CharmModMenuPlugin"
    ]
  },
  "accessWidener": "charm.accesswidener",
  "depends": {
    "fabricloader": ">=${loader_version}",
    "charmony": ">=${charmony_version}",
    "minecraft": "${minecraft_version}",
    "java": ">=17"
  },
  "contact": {
    "homepage": "https://svenhjol.github.io/Charm",
    "sources": "https://github.com/muon-rw/Charm"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "${discord_link}"
      },
      "update_checker": true
    }
  }
}